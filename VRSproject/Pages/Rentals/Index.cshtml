@page
@using VRSproject.Models
@model VRSproject.Pages.Rentals.IndexModel
@{
    ViewData["Title"] = "My Rentals";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>My Rental History</h2>
</div>

@if (Model.Rentals.Count == 0)
{
    <div class="alert alert-info">
        <h5>No rentals found</h5>
        <p class="mb-0">You haven't rented any vehicles yet.</p>
    </div>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Vehicle</th>
                    <th>Rental Period</th>
                    <th>Status</th>
                    <th>Total Cost</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var rental in Model.Rentals)
                {
                    <tr>
                        <td>
                            <div class="d-flex align-items-center">
                                <div class="me-2">
                                    @GetVehicleIcon(rental.VehicleType)
                                </div>
                                <div>
                                    <div class="fw-bold">@rental.VehicleDescription</div>
                                    <small class="text-muted">@rental.VehicleType</small>
                                </div>
                            </div>
                        </td>
                        <td>
                            <div>@rental.StartDate.ToString("MMM dd, yyyy")</div>
                            <small class="text-muted">
                                @if (rental.EndDate.HasValue)
                                {
                                    @:to @rental.EndDate.Value.ToString("MMM dd, yyyy")
                                }
                                else
                                {
                                    @:Ongoing
                                }
                            </small>
                        </td>
                        <td>
                            <span class="badge @GetStatusBadgeClass(rental.Status)">
                                @rental.Status
                            </span>
                        </td>
                        <td>@rental.TotalCost.ToString("C")</td>
                        <td>
                            @if (rental.CanGiveFeedback)
                            {
                                <a asp-page="/Feedback/Create" asp-route-rentalId="@rental.RentalId"
                                   class="btn btn-sm btn-outline-primary">Give Feedback</a>
                            }
                            else if (rental.Status == RentalStatus.Active)
                            {
                                <button class="btn btn-sm btn-outline-secondary" disabled>Rental Active</button>
                            }
                            else
                            {
                                <span class="text-muted">Feedback Submitted</span>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}

@functions {
    private string GetVehicleIcon(VehicleType type)
    {
        return type switch
        {
            VehicleType.Car => "🚗",
            VehicleType.Bike => "🚲",
            VehicleType.Truck => "🚚",
            _ => "🚗"
        };
    }

    private string GetStatusBadgeClass(RentalStatus status)
    {
        return status switch
        {
            RentalStatus.Active => "bg-warning",
            RentalStatus.Completed => "bg-success",
            RentalStatus.Cancelled => "bg-danger",
            _ => "bg-secondary"
        };
    }
}