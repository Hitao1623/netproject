@page "{id:guid}"
@model VRSproject.Pages.Maintenance.EditModel
@{
    ViewData["Title"] = Model.Header;
}

<h2>@Model.Header</h2>

<div class="mb-3">
    <strong>Vehicle:</strong> @Model.Data.VehicleLabel
</div>

<form method="post">
    <div class="row g-3">
        <div class="col-md-4">
            <label asp-for="Form.StartAtUtc" class="form-label">Start (UTC)</label>
            <input asp-for="Form.StartAtUtc"
                   type="datetime-local"
                   class="form-control"
                   step="60"
                   asp-format="{0:yyyy-MM-ddTHH:mm}" />
            <span asp-validation-for="Form.StartAtUtc" class="text-danger"></span>
        </div>
        <div class="col-md-4">
            <label asp-for="Form.EndAtUtc" class="form-label">End (UTC)</label>
            <input asp-for="Form.EndAtUtc"
                   type="datetime-local"
                   class="form-control"
                   step="60"
                   asp-format="{0:yyyy-MM-ddTHH:mm}" />
            <span asp-validation-for="Form.EndAtUtc" class="text-danger"></span>
        </div>
        <div class="col-12">
            <label asp-for="Form.Description" class="form-label"></label>
            <textarea asp-for="Form.Description" class="form-control" rows="4"></textarea>
            <span asp-validation-for="Form.Description" class="text-danger"></span>
        </div>
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Save</button>
        <a asp-page="Index" class="btn btn-secondary">Back</a>
    </div>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}
