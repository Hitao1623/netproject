@page
@model IndexModel
@{
    ViewData["Title"] = "Welcome";
}

<div class="py-5 text-center">
    <h1 class="display-4">Welcome</h1>
    <p class="lead">Use the shortcuts below to manage the system.</p>
</div>

<div class="row g-4">

    <!-- Manage Vehicles -->
    <div class="col-12 col-md-6 col-lg-3">
        <div class="card h-100 shadow-sm">
            <div class="card-body d-flex flex-column">
                <h5 class="card-title">Manage Vehicles</h5>
                <p class="card-text flex-grow-1">
                    Create, edit and delete vehicles; browse vehicle list.
                </p>
                <a asp-page="/Vehicles/Index" class="btn btn-primary w-100">Open</a>
            </div>
        </div>
    </div>

    <!-- Maintenance -->
    <div class="col-12 col-md-6 col-lg-3">
        <div class="card h-100 shadow-sm">
            <div class="card-body d-flex flex-column">
                <h5 class="card-title">Maintenance</h5>
                <p class="card-text flex-grow-1">
                    Schedule, track and finish vehicle maintenance.
                </p>
                <a asp-page="/Maintenance/Index" class="btn btn-success w-100">Open</a>
            </div>
        </div>
    </div>

    <!-- Rental Service (placeholder) -->
    <div class="col-12 col-md-6 col-lg-3">
        <div class="card h-100 shadow-sm">
            <div class="card-body d-flex flex-column">
                <h5 class="card-title">My Rentals</h5>
                <p class="card-text flex-grow-1">
                    View your rental history and provide feedback.
                </p>
                <a asp-page="/Rentals/Index" class="btn btn-info w-100">View My Rentals</a>
            </div>
        </div>
    </div>

    <!-- Feedback (placeholder) -->
    <div class="col-12 col-md-6 col-lg-3">
        <div class="card h-100 shadow-sm">
            <div class="card-body d-flex flex-column">
                <h5 class="card-title">Feedback</h5>
                <p class="card-text flex-grow-1">
                    View customer feedback
                </p>
                <a asp-page="/Feedback/Index" class="btn btn-outline-secondary w-100">Go</a>
            </div>
        </div>
    </div>

</div>
